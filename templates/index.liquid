<div class="margin-bottom">	
	{% if settings.slide_1 != false or settings.slide_2 != false or settings.slide_3 != false or settings.slide_4 != false %}
	<div id="home-slider" class="royalSlider rsDefault">
		{% for i in (1..4) %}
		{% capture show_slide %}slide_{{ i }}{% endcapture %}
		{% capture slide_image %}slideshow_{{ i }}.jpg{% endcapture %}
		{% capture slide_link %}slide_{{ i }}_link{% endcapture %}
		{% capture slide_alt %}slide_{{ i }}_alt{% endcapture %}
		{% if settings[show_slide] %}
		<a href="{{ settings[slide_link] }}">
			<img class="rsImg img-responsive" src="{{ slide_image | asset_url }}" alt="{{ settings[slide_alt] | escape }}" />
		</a>
		{% endif %}
		{% endfor %}
	</div>
	{% endif %}
</div>

