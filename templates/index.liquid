{% if settings.slide_1 != false or settings.slide_2 != false or settings.slide_3 != false or settings.slide_4 != false %}
<!-- Begin slider -->
<div class="span12 border-bottom p30">
	<div class="flexslider-container">
		<div class="flexslider">
			<ul class="slides">
				{% for i in (1..4) %}
				{% capture show_slide %}slide_{{ i }}{% endcapture %}
				{% capture image %}slideshow_{{ i }}.jpg{% endcapture %}
				{% capture link %}slide_{{ i }}_link{% endcapture %}
				{% capture alt %}slide_{{ i }}_alt{% endcapture %}
				{% if settings[show_slide] %}
				<li>
					<a href="{{ settings[link] }}">
						<img src="{{ image | asset_url }}" alt="{{ settings[alt] | escape }}" />
					</a>
				</li>
				{% endif %}
				{% endfor %}
			</ul>
			<div class="flex-controls"></div>
		</div>
	</div>
</div>
<!-- End slider -->
{% endif %}

<div class="row">
	<div class="col-md-8">
		<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
			<!-- Indicators -->
			<ol class="carousel-indicators">
				<li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
				<li data-target="#carousel-example-generic" data-slide-to="1"></li>
				<li data-target="#carousel-example-generic" data-slide-to="2"></li>
			</ol>

			<!-- Wrapper for slides -->
			<div class="carousel-inner" role="listbox">
				<div class="item active">
					<img src="http://goo.gl/S9NF7U">
				</div>
				<div class="item">
					<img src="http://goo.gl/72Afzp">
				</div>
				...
			</div>

			<!-- Controls -->
			<a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
				<span class="icon-prev" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
				<span class="icon-next" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			</a>
		</div>
		
	</div>
	<div class="col-md-4">
		<img class="img-responsive" src="https://scontent-fra.xx.fbcdn.net/hphotos-xpf1/v/t1.0-9/10984262_10152748161533226_2992583213174173752_n.jpg?oh=c45af0c6bffd19838cb6859c62b869a1&oe=557305BC">
	</div>
</div>

<div class="row">
	<div class="col-md-6">
		<img class="img-responsive" src="http://goo.gl/fDUjfs">
	</div>
	<div class="col-md-6">
		<div class="row">
			{% for product in collections.Bracelets.products limit:4 %}
			{% include 'product-loop' with 'col-sm-6' %}
			{% endfor %}
		</div>
	</div>	
</div>

<!-- Featured products -->
<section class="section">
	<div class="row">
		<header class="collection-header">
			<h2 class="collection-header-title">{{ collections.frontpage.title }}</h1>
		</header>
		{% for product in collections.Frontpage.products limit:4 %}
			{% include 'product-loop' with 'col-sm-3' %}
		{% endfor %}
	</div>
</section>
	<!-- End products -->

	<!-- start content page -->
	{% if settings.homepage != '' %}
	{% assign helper_welcome = false %}

	{% if pages[settings.homepage].content contains 'where users go when first trying to determine a level of trust' %}
	{% assign helper_welcome = true %}
	{% endif %}

	{% if pages[settings.homepage].content contains 'Write a few sentences to tell people about your store' %}
	{% assign helper_welcome = true %}
	{% endif %}

	<div class="span12 clearfix {% if helper_welcome %}helper-section{% endif %}">
		{% if helper_welcome %}
		<div class="note helper-note helper-homepage-page">
			<i class="icon-pages helper-icon"></i>
			<h3>{{ 'home_page.onboarding.page_title' | t }}</h3>
			<p>{{ 'home_page.onboarding.page_text' | t }}</p>
			<p><a href="/admin/pages" class="admin-btn-primary">{{ 'home_page.onboarding.edit_page' | t }}</a><a class="secondary-action" href="/admin/themes/current/settings">{{ 'home_page.onboarding.view_settings' | t }}</a></p>
		</div>
		{% endif %}
		<div class="p30 clearfix  {% if helper_welcome %}helper-content{% endif %}">
			<div class="intro clearfix">
				<h2>{{ pages[settings.homepage].title }}</h2>
				{{ pages[settings.homepage].content }}
			</div>
		</div>
	</div>
	{% endif %}
	<!-- end content page -->
