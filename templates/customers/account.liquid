{% layout settings.customer_layout %}
<div id="customer-account">
	
	<div class="page-header">
		<h2>My Account</h2>
	</div>
	
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<p class="text-center">Welcome {{ customer.first_name }}. This is your {{ shop.name }} account. Click on the following sections to manage your personal information.</p>
		</div>
	</div>

	<div class="row">
		<div class="col-md-4 col-md-offset-2">
			<h4 class="title">Address book</h4>
			<p><a id="view_address" href="/account/addresses">Add or edit billing and shipping addresses.</a></p>
		</div>
		<div class="col-md-4">
			<h4 class="title">Wish list</h4>
			<p><a id="wish_list" href="/pages/wish-list">View your Wish List, organize and shop it.</a></p>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4 col-md-offset-2">
			<h4 class="title">My orders</h4>
			<p><a href="/pages/my-orders">Return or exchange items, track your deliveries and view your order history.</a></p>
		</div>
	</div> 

	<div class="text-center">
		<br/>
		<a class="btn btn-default" href="/account/logout">Logout</a>
	</div>
</div>
