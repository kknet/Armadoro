<nav class="navbar" style="border-bottom: 1px solid #ebebeb;">
	
	<div class="navbar-header">
		<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
			<span class="sr-only">Toggle navigation</span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
		</button>

		<a href="/cart" class="navbar-basket">
			<i class="ion-bag"></i>
			{{ cart.item_count }} {{ cart.item_count | pluralize: 'item', 'items' }} ({{ cart.total_price | money }})
		</a>
	</div>

	<div class="collapse navbar-collapse" id="navbar-collapse">

		{% comment %}search input hidden in desktop{% endcomment %}
		<form action="/search" method="get" class="navbar-form visible-xs-block" role="search">
			<div class="form-group">
				<input name="q" type="search" id="search-field" class="form-control" placeholder="Search store..." value="{{ search.terms | escape }}" />
			</div>
		</form>

		{% comment %}main site naviagation{% endcomment %}
		<ul class="nav navbar-nav navbar-left">
			{% for link in linklists.main-menu.links %}
			{% assign child_list_handle = link.title | handleize %}
			{% if linklists[child_list_handle].links != blank %}
			<li class="{% if link.active %} active{% endif %} dropdown">
				<a href="{{ link.url }}" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">{{ link.title }}</a>
				<ul class="dropdown-menu" role="menu">
					{% for childlink in linklists[child_list_handle].links %}
					<li {% if childlink.active %}class="active"{% endif %}>
						<a href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
					</li>
					{% endfor %}
				</ul>
			</li>
			{% else %}
			<li {% if link.active %}class="uk-active"{% endif %}>
				<a href="{{ link.url }}">{{ link.title }}</a>
			</li>
			{% endif %}
			{% endfor %}
		</ul>

		<ul class="nav navbar-nav navbar-right">
			<li>
				<a class="btn-search btn-secondary" data-toggle="collapse" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
					<i class="fa fa-search"></i>
				</a>
			</li>
		</ul>

		{% comment %}site;s complementary navigation{% endcomment %}
		<ul class="nav navbar-nav navbar-secondary visible-xs-block">
			{% for link in linklists.toolbar-menu.links %}
			<li {% if link.active %}class="active"{% endif %}><a href="{{ link.url }}">{{ link.title }}</a></li>
			{% endfor %}
		</ul>
	</div>
</nav>

<div class="collapse" id="collapseExample">
	<div class="well">
		<form action="/search" method="get" role="search">
			<input name="q" type="search" id="search-field" class="form-control input-lg" placeholder="Search store..." value="{{ search.terms | escape }}" />
		</form>
	</div>
</div>